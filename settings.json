  "channel" : "#/jp/shows",
  "nick" : "vidbot",
  "realname" : "vidbot",

  "whitelist" : ["on3", "anothernick", "rootB"],
  "modlist" : ["on_three", "pinetreegator", "bp", "Gerardos", "swam"],
